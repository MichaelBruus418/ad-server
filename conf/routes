# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /																controllers.HomeController.index()

GET			/admin													controllers.admin.AdminController.index()

GET			/admin/publishers								controllers.admin.PublisherController.display()
GET			/admin/publishers/edit/:id			controllers.admin.PublisherController.edit(id: Int)

#GET			/api/publisher									controllers.api.PublisherController.getAll()
#GET			/api/publisher/:id							controllers.api.PublisherController.get(id: Int)
POST		/api/publisher/add							controllers.api.PublisherController.add()
#PUT			/api/publisher/update/:id				controllers.api.PublisherController.update(id: Int)
#DELETE	/api/publisher/delete/:id				controllers.api.PublisherController.delete(id: Int)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
